@using NS.WEB.Modules.Subscription.Core
@inherits ComponentCore<HeadPage>

@inject IpInfoApi IpInfoApi
@inject IJSRuntime JsRuntime

<MudPaper Class="mb-4" Outlined="true">
    <MudStack StretchItems="StretchItems.Middle" Row="true" Spacing="2">
        <div class="pa-2" style="align-self: center;">
            <MudImage Src="@ImageSource" Alt="@Title" Style="max-height: 64px; width: 100%; vertical-align: top;"></MudImage>
        </div>
        <div class="pa-2">
            <MudText Typo="Typo.h1" Color="Color.Primary" Class="custom-h1">
                @Title
            </MudText>
            @if (Text.NotEmpty())
            {
                <MudText Typo="Typo.caption" Align="Align.Justify">
                    @Text
                </MudText>
            }
        </div>
    </MudStack>
</MudPaper>

@code {
    [Parameter] public string? Title { get; set; }
    [Parameter] public string? Text { get; set; }
    [Parameter] public string? ImageSource { get; set; }
}
