</MudGrid>

<MudGrid Spacing="2" Class="mb-2">
    <MudItem xs="12" md="6">
        <TravelHistoryComponent AllRegions="AllRegions"></TravelHistoryComponent>
    </MudItem>
    <MudItem xs="12" md="6">
        <PageSection Icon="@IconsFA.Solid.Icon("thumbs-up").Font" Title="My Suggestions">
            <ActionFragment>
                <MudIconButton Icon="@IconsFA.Solid.Icon("refresh").Font" Variant="Variant.Filled" Color="Color.Primary" Size="AppStateStatic.Size" Class="me-1" Disabled="true" />
                <MudIconButton Icon="@IconsFA.Solid.Icon("filter").Font" Variant="Variant.Filled" Color="Color.Primary" Size="AppStateStatic.Size" Disabled="true" />
            </ActionFragment>
            <BodyFragment>
                <FeatureUnavailable></FeatureUnavailable>
            </BodyFragment>
        </PageSection>
    </MudItem>
</MudGrid>

<MudGrid Spacing="2" Class="mb-2">
    <MudItem xs="12" md="6">
        <WishlistComponent AllRegions="AllRegions"></WishlistComponent>
    </MudItem>
    <MudItem xs="12" md="6">
        <PageSection Icon="@IconsFA.Solid.Icon("plane-circle-check").Font" Title="Next Destinations">
            <ActionFragment>
                <MudIconButton Icon="@IconsFA.Solid.Icon("plus").Font" Variant="Variant.Filled" Color="Color.Primary" Size="AppStateStatic.Size" Disabled="true" />
            </ActionFragment>
            <BodyFragment>
                <FeatureUnavailable></FeatureUnavailable>
            </BodyFragment>
        </PageSection>
    </MudItem>
</MudGrid>

<PageSection Icon="@IconsFA.Solid.Icon("bell").Font" Title="Notifications">
    <BodyFragment>
        <FeatureUnavailable></FeatureUnavailable>
    </BodyFragment>
</PageSection>

@code {
    private AllRegions? AllRegions { get; set; }

    protected override async Task LoadEssentialDataAsync()
    {
        AllRegions = await AllRegionsApi.GetAll();
    }
}
