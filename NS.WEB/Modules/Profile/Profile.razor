                <MudText Typo="Typo.subtitle1" Color="Color.Primary">
                    xxx
                </MudText>
            </div>
            <MudChip T="string" Color="Color.Secondary" Label="true" Style="padding: 0.2rem; height: auto;" Size="AppStateStatic.Size">
                @(0) yyy
            </MudChip>
